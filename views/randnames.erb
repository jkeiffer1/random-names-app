<center><%=firstname%> <%=lastname%>, how many names would you like to pair?<br>
<br>

<form method = "post" action = "randnames" id = "text_box">
	<input type ="number" min = 2 autofocus= "autofocus" id ="myInput" oninput = "myFunction()" >
    <p id = "demo"></p>
    <br>
    <input type = "submit">
</form></center>

<script>

function myFunction() {
	var x = document.getElementById("myInput").value;
    document.getElementById("demo").innerHTML = "Enter their names in the boxes below:<br>";
    for (var i = 1; i <= x; i++) {
    var input = document.createElement("input");
        input.type = "text";
        input.name = "text" + i;
        input.id = "marv";
        input.required = true;
        input.placeholder = "Enter Name"
        document.getElementById("demo").appendChild(input).value;
        }
    }
</script>


